<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <RelativeLayout
        android:id="@+id/aboutTop"
        android:background="#4ba231"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Cooking Start"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:textSize="@dimen/_15ssp"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/back_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            />

    </RelativeLayout>


    <TextView
        android:layout_below="@+id/aboutTop"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cooking Start"
        android:layout_marginLeft="@dimen/_20sdp"
        android:textSize="@dimen/_18ssp"
        android:id="@+id/text1"
        android:textStyle="bold"
        android:textColor="#919090"
        />

    <TextView
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When you going to start cooking ?"
        android:layout_marginLeft="@dimen/_20sdp"
        android:textSize="@dimen/_13ssp"
        android:layout_below="@+id/text1"
        android:id="@+id/text2"
        android:textStyle="normal"
        android:textColor="#919090"
        />


    <ScrollView
        android:layout_below="@+id/text2"
        android:layout_above="@+id/aboutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/linc1"
                android:orientation="horizontal"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp">



                <RelativeLayout
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/background_with_stroke"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/_20ssp"
                        android:textStyle="bold"
                        android:textColor="#919090"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Min"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="normal"
                        android:textColor="#919090"
                        />


                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/background_with_stroke"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/_20ssp"
                        android:textStyle="bold"
                        android:textColor="#919090"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Min"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="normal"
                        android:textColor="#919090"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:background="@drawable/background_with_stroke"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/_20ssp"
                        android:textStyle="bold"
                        android:textColor="#919090"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Min"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="normal"
                        android:textColor="#919090"
                        />

                </RelativeLayout>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/linc2"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp">



                <RelativeLayout
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/background_with_stroke"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="35"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/_20ssp"
                        android:textStyle="bold"
                        android:textColor="#919090"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Min"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="normal"
                        android:textColor="#919090"
                        />


                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/background_with_stroke"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="40"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/_20ssp"
                        android:textStyle="bold"
                        android:textColor="#919090"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Min"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="normal"
                        android:textColor="#919090"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:background="@drawable/background_with_stroke"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/_20ssp"
                        android:textStyle="bold"
                        android:textColor="#919090"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Min"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="normal"
                        android:textColor="#919090"
                        />

                </RelativeLayout>


            </LinearLayout>
            <TextView
                android:layout_below="@+id/aboutTop"
                android:layout_marginRight="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Client will get Mail about the cooking started"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                android:textColor="#d40d00"
                />

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/aboutBottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardUseCompatPadding="false"
            android:background="#ffffff"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/info1_icon"
                    />


                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/money_icon"
                    />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</RelativeLayout>