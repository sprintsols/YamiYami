<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/activity_main"
    android:layout_height="match_parent"
    tools:context=".activities.FragmentContainerActivity">

    <LinearLayout
        android:id="@+id/lin11"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relHomeTop"
            android:background="#4ba231"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp">

            <ImageView
                android:id="@+id/set_Icon"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/setting_icon"
                android:layout_marginLeft="@dimen/_10sdp"
                />

            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/price_Icon"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/price_icon"
                android:layout_marginLeft="@dimen/_10sdp"
                />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp">


            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="4"
                android:background="#f1f1f1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RelativeLayout
                    android:id="@+id/relOrder"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/order_icon"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        />

                    <View
                        android:id="@+id/view_order"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_alignParentBottom="true"
                        android:background="#4ba231"
                        />


                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relPickedDriver"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/profile_icon"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        />

                    <View
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_alignParentBottom="true"
                        android:background="#4ba231"
                        />


                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relTick"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/tick_icon"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        />

                    <View
                        android:id="@+id/view_tick"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_alignParentBottom="true"
                        android:background="#4ba231"
                        />


                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relCross"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/cross_icon"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        />

                    <View
                        android:id="@+id/view_cross"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_alignParentBottom="true"
                        android:background="#4ba231"
                        />


                </RelativeLayout>


            </LinearLayout>


        </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragmentContainer"
            />

    </LinearLayout>







    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navvv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#ffffff"
        app:itemTextColor="#ffffff"
        app:itemIconTint="#ffffff"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        >

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>