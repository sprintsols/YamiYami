<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/aboutTop"
        android:background="#4ba231"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CALCULATOR"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:textSize="@dimen/_17ssp"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/back_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            />

    </RelativeLayout>


    <LinearLayout
        android:layout_below="@+id/aboutTop"
        android:layout_above="@+id/aboutBottom"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical"
        >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="5.5"
            android:weightSum="13"
            android:orientation="vertical"
            android:layout_height="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total To Pay"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_17ssp"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:textColor="#5e5d5d"
                    />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="0dp">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="@dimen/_2sdp"
                    app:cardCornerRadius="@dimen/_3sdp"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25.97 €"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_17ssp"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:textColor="#70ad46"
                            />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Client Given"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_17ssp"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:textColor="#5e5d5d"
                    />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="0dp">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="@dimen/_2sdp"
                    app:cardCornerRadius="@dimen/_3sdp"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30.00 €"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_17ssp"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:textColor="#5e5d5d"
                            />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Refund To Client"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_17ssp"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:textColor="#5e5d5d"
                    />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="0dp">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="@dimen/_2sdp"
                    app:cardCornerRadius="@dimen/_3sdp"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.10 €"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_17ssp"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:textColor="#de0f0f"
                            />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>





        </LinearLayout>


        <LinearLayout
