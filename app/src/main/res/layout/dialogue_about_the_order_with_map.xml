<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/aboutTop"
        android:background="#4ba231"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABOUT THE ORDER"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:textSize="@dimen/_17ssp"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/back_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            />

    </RelativeLayout>
    <ScrollView
        android:background="#f1f1f1"
        android:layout_below="@+id/aboutTop"
        android:layout_above="@+id/aboutBottom1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.google.android.gms.maps.MapView
                android:id="@+id/map11"
                android:layout_width="match_parent"
                android:layout_height="700dp"
                />



        </RelativeLayout>



    </ScrollView>

    <RelativeLayout
        android:id="@+id/aboutBottom1"
        android:layout_above="@+id/aboutBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp">

        <ImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/call_icon"
            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/aboutBottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardUseCompatPadding="false"
            android:background="#f1f1f1"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="horizontal"
                android:background="#f1f1f1"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/info1_icon"
                        />


                </RelativeLayout>




                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/bike1_icon"
                        />


                </RelativeLayout>




                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/gpsloctaion_icon"
                        />


                </RelativeLayout>




                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/money_icon"
                        />


                </RelativeLayout>





            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>


</RelativeLayout>