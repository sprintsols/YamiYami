<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/aboutTop"
        android:background="#4ba231"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABOUT THE ORDER"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:textSize="@dimen/_17ssp"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/back_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            />

    </RelativeLayout>
    <ScrollView
        android:background="#f1f1f1"
        android:layout_below="@+id/aboutTop"
        android:layout_above="@+id/aboutBottom1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:background="#f1f1f1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp">


                <ImageView
                    android:id="@+id/imgDelivery"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/info_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    />

                <RelativeLayout
                    android:layout_toRightOf="@+id/imgDelivery"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtTop11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About Order :"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"
                        android:textColor="#2f2f2f"
                        />
                    <TextView
                        android:layout_below="@+id/txtTop11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order id, order time , order type"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_9ssp"
                        android:textStyle="normal"
                        android:textColor="#2f2f2f"
                        />



                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:background="#f1f1f1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp">


                <ImageView
                    android:id="@+id/imgBestSeller"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/info_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    />

                <RelativeLayout
                    android:layout_toRightOf="@+id/imgBestSeller"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtBest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Best Seller :"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"
                        android:textColor="#2f2f2f"
                        />
                    <TextView
                        android:layout_below="@+id/txtBest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name , Last Name"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_9ssp"
                        android:textStyle="normal"
                        android:textColor="#2f2f2f"
                        />



                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:background="#f1f1f1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp">


                <ImageView
                    android:id="@+id/imgLocation"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/info_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    />

                <RelativeLayout
                    android:layout_toRightOf="@+id/imgLocation"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location :"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"
                        android:textColor="#2f2f2f"
                        />
                    <TextView
                        android:layout_below="@+id/txtLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hannover , 30159 Boult"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_9ssp"
                        android:textStyle="normal"
                        android:textColor="#2f2f2f"
                        />



                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:background="#f1f1f1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp">


                <ImageView
                    android:id="@+id/imgAddress"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/info_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    />

                <RelativeLayout
                    android:layout_toRightOf="@+id/imgAddress"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address :"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"
                        android:textColor="#2f2f2f"
                        />
                    <TextView
                        android:layout_below="@+id/txtAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lang Loune , 1A"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_9ssp"
                        android:textStyle="normal"
                        android:textColor="#2f2f2f"
                        />



                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:background="#f1f1f1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp">


                <ImageView
                    android:id="@+id/imgPayment"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/info_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    />

                <RelativeLayout
                    android:layout_toRightOf="@+id/imgPayment"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtPayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment :"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"
                        android:textColor="#2f2f2f"
                        />
                    <TextView
                        android:layout_below="@+id/txtPayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cash Payment"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_9ssp"
                        android:textStyle="normal"
                        android:textColor="#2f2f2f"
                        />



                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:background="#f1f1f1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp">


                <ImageView
                    android:id="@+id/imgNotification"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/info_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    />

                <RelativeLayout
                    android:layout_toRightOf="@+id/imgNotification"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtNotification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notification :"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"
                        android:textColor="#2f2f2f"
                        />
                    <TextView
                        android:layout_below="@+id/txtNotification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Please ring two times"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_9ssp"
                        android:textStyle="normal"
                        android:textColor="#ec4141"
                        />



                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:background="#f1f1f1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp">


                <ImageView
                    android:id="@+id/imgPhone"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/info_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    />

                <RelativeLayout
                    android:layout_toRightOf="@+id/imgPhone"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone :"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"
                        android:textColor="#2f2f2f"
                        />
                    <TextView
                        android:layout_below="@+id/txtPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="03086218229"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_9ssp"
                        android:textStyle="normal"
                        android:textColor="#2f2f2f"
                        />



                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:background="#f1f1f1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp">


                <ImageView
                    android:id="@+id/imgCart"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/info_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    />

                <RelativeLayout
                    android:layout_toRightOf="@+id/imgCart"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cart Total :"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"
                        android:textColor="#2f2f2f"
                        />
                    <TextView
                        android:layout_below="@+id/txtCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="03086218229"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_9ssp"
                        android:textStyle="normal"
                        android:textColor="#2f2f2f"
                        />



                </RelativeLayout>


            </RelativeLayout>



        </LinearLayout>


    </ScrollView>

    <RelativeLayout
        android:id="@+id/aboutBottom1"
        android:layout_above="@+id/aboutBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp">

        <ImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/call_icon"
            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/aboutBottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardUseCompatPadding="false"
            android:background="#f1f1f1"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="horizontal"
                android:background="#f1f1f1"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/info1_icon"
                        />


                </RelativeLayout>




                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/bike1_icon"
                        />


                </RelativeLayout>




                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/gpsloctaion_icon"
                        />


                </RelativeLayout>




                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/money_icon"
                        />


                </RelativeLayout>





            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>



</RelativeLayout>